	<!-- List<Orders> selectPageByUid(@Param("uid") Integer uid,@Param("begin") 
		int begin, @Param("limit") int limit); -->
	<select id="selectPageByUid" parameterType="int" resultMap="OrdersAndOrderItems">
		SELECT
			*
		FROM
			orders o,
			orderitem oi,
			product p
		WHERE
			o.uid = #{uid}
		AND o.oid = oi.oid
		AND oi.pid = p.pid
		limit #{begin},#{limit}
	</select>

